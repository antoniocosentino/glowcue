{
  "manifest_version": 3,
  "name": "GlowCue",
  "version": "1.1.0",
  "description": "Visual time signals for presenters",
  "permissions": [
    "scripting",
    "activeTab",
    "contextMenus"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "commands": {
    "glow-clear": {
      "suggested_key": {
        "default": "Alt+Shift+C"
      },
      "description": "Clear glow"
    },
    "glow-warning": {
      "suggested_key": {
        "default": "Alt+Shift+W"
      },
      "description": "Warning (yellow)"
    },
    "glow-timeup": {
      "suggested_key": {
        "default": "Alt+Shift+T"
      },
      "description": "Time up (red)"
    }
  }
}
